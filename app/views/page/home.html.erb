<% provide(:title, 'home') %>
<div>
  <div class="row">
     
    <div id='bcart' class="span4 cart-user">
     <%= render @bcart %>
     <br>
     <%= link_to @bcart, id: "logo-p" do %>
                      <img src="http://www.graphicsbeam.com/wp-content/uploads/2012/04/Shopping-Cart-Icon-with-PSD-and-PNG-Format.png" alt="img"  width="350" height="350">
                 <% end %>

    </div>

     <div class="span6  showh">
        <ul class="d-ul">
                            <%@lp.each do |p| %>
                   <div class="d-list">
  	              <li><%= link_to p, id: "logo-p" do %>
                      <img src="<%=p.img%>" alt="img"  width="150" height="152">
                 <% end %>
           <%=form_for(:bsession, url: bsessions_path) do |f| %>
                 
                 <%= f.hidden_field :name, :value => p.name%>
                 <%= f.hidden_field :price, :value => p.price%>
                 <%= f.hidden_field :desc, :value => p.desc%>
                 <%= f.hidden_field :img, :value => p.img%>
                 <h2 class="dh2" ><%= p.name%></h2><h2><%=number_to_currency(p.price)%></h2>     
  <h6><%=link_to "details", p %> </h6>
                    <%= f.submit "Buy", class: "btn  btn-default
 bhome" %>  
           <% end %>
<%= button_to 'Add to Cart',line_items_path(:product_id => p),:remote => true,class: "btn btn-danger home"%> 
                   </li>
               </div>
                  <% end %>
                      </ul>
<%= will_paginate @lp%>
        </div>

  </div>
</div>