<div class ="container">
<div class="row">
  <div class="span6 offset 3">
    <%= form_for(:email, url: email_index_path) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

       
      <%= f.hidden_field :body, :value => @body %>

      <%= f.submit "SEND", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
  
</div>
</div>
